<genericPage guid="7f3fadf5-a9e1-4a7a-9340-ea2ab9cb1934" id="64696" nodeName="Best ski resort Christmas markets" isDoc="" updated="2024-12-10T12:01:13.3370000Z" parentGUID="08f2c95a-400f-49b1-87fe-bb5058955b5b" nodeTypeAlias="genericPage" templateAlias="GenericV2Responsive" sortOrder="52" published="true" isBlueprint="false">
